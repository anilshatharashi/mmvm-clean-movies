<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OverflowMenu" parent="@android:style/Widget.Material.PopupMenu.Overflow">
        <item name="android:dropDownHorizontalOffset">-5dip</item>
        <item name="android:dropDownVerticalOffset">60dip</item>
    </style>

    <style name="movieDetailsLabel">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginStart">@dimen/margin_standard</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="movieDetailsHeadingBold" parent="movieDetailsLabel">
        <item name="android:textSize">@dimen/headline_text_view</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="movieDetailsLarge" parent="movieDetailsHeadingBold">
        <item name="android:textSize">20sp</item>
    </style>
</resources>